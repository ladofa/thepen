<UserControl x:Class="ThePen.PenRepresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThePen"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="32">
    <Grid Background="White">
        <Ellipse x:Name="Dot" Width="3" Height="3" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
