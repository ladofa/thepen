<UserControl x:Class="ThePen.SettingHotKey"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThePen"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <CheckBox x:Name="CtrlCheckBox" Content="CTRL" Margin="0 0 8 0" VerticalAlignment="Center"/>
            <CheckBox x:Name="AltCheckBox" Content="ALT" Margin="0 0 8 0" VerticalAlignment="Center"/>
            <CheckBox x:Name="ShiftCheckBox" Content="SHIFT" Margin="0 0 8 0" VerticalAlignment="Center"/>
            <CheckBox x:Name="WinCheckBox" Content="WIN" Margin="0 0 8 0" VerticalAlignment="Center"/>
            <ComboBox x:Name="TriggerComboBox" Height="20" Width="80" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
