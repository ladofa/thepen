<Window x:Class="ThePen.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThePen"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" WindowStyle="None"  AllowsTransparency="True"  Topmost="True" Background="#00000000"
        >
    <Grid StylusInAirMove="Grid_StylusInAirMove">
        <Grid.CommandBindings>
            <CommandBinding Executed="Undo" Command="ApplicationCommands.Undo"/>
            <CommandBinding Executed="Redo" Command="ApplicationCommands.Redo"/>
        </Grid.CommandBindings>
        <InkCanvas Name="Canvas" Background="#00000000" UseCustomCursor="True" Cursor="Pen"/>
    </Grid>
</Window>
